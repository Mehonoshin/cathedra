= semantic_form_for @article do |f|
  = f.inputs do
    = f.input :title, label: "Заголовок"
    = f.input :body, as: :ckeditor, label: "Тело"
    = f.input :category, as: :select, label: "Категория", collection: Hash[Article::CATEGORIES.map { |c| [t("categories.#{c}"), c] }], include_blank: false
  = f.actions do
    = f.action :submit, label: "Применить", button_html: { class: "btn btn-primary" }
